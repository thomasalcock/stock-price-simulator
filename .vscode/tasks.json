{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "main.cpp",
                "-std=c++20",
                "-Wall",
                "-Werror",
                "-Wextra",
                "-Wpedantic",
                "-pedantic-errors",
                "-o",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task by the C++ extension."
        },
        {
            "label": "run",
            "type": "shell",
            "args": [
                "n_paths=5",
                "drift=0.06",
                "volatility=0.04",
                "initial_value=50"
            ],
            "command": "./main",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "build"
        }
    ]
}